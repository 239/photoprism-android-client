<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_person"
    android:layout_width="@dimen/list_item_person_width"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="8dp"
    app:strokeWidth="0dp"
    tools:cardBackgroundColor="@color/md_theme_light_secondaryContainer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/list_item_person_image_size"
            android:layout_height="@dimen/list_item_person_image_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/md_theme_dark_background"
            tools:ignore="ContentDescription"
            tools:src="@mipmap/splash_logo" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:paddingTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            app:layout_constraintTop_toBottomOf="@id/image_view"
            tools:text="Dima S." />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
